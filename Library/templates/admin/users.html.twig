{% extends 'base.html.twig' %}
{% block body %}
<div class=" container table-responsive">
        <h2>Users Mangement</h2>
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">name</th>
              <th scope="col">lastname</th>
              <th scope="col">username</th>
              <th scope="col">email</th>
              <th scope="col">books</th>
            </tr>
          </thead>
          <tbody>
             {% for user in users %} 
                <tr>
                    <td>{{loop.index}}</td>
                    <td>{{user.name}}</td>
                    <td>{{user.lastname}}</td>
                    <td>{{user.username}}</td>
                    <td>{{user.email}}</td>
                    <td></td>
                    <td><a class="btn btn-danger" href="{{path('delete_user',{'id':user.id})}}">delete</a>&nbsp;<a class="btn btn-info" href="{{  path('edit_user',{'id': user.id})   }}">edit</a></td>
                </tr>
                {% endfor %}
            
          </tbody>
        </table>
      </div>

      {%  endblock  %}